<Window x:Class="WpfApp1.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="30px"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <Button Name="btnMain" Grid.Row="0" Content="Main Page" Click="btnMain_Click" />

        <TextBlock Name="tbEmail" Grid.Row="2" HorizontalAlignment="Center">E-mail</TextBlock>
        <TextBox Name="tbxEmail" Grid.Row="3" HorizontalAlignment="Center"/>
        <TextBlock Name="tbPassword" Grid.Row="4" HorizontalAlignment="Center">Password</TextBlock>
        <PasswordBox Name="tbxPassword" Grid.Row="5" HorizontalAlignment="Center"/>

        <Button Name="btnLogin" Grid.Row="6" Content="Login"/>
    </Grid>
</Window>
