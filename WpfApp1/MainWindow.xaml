<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Stream Scheduler" Height="450" Width="800">
    
    <Grid Name="MainGrind">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="80px"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        
        <Button Name="btnForm" Grid.Row="0" Grid.Column="0" Content="Create a Schedule" Click="btnForm_Click"/>
        <Button Name="btnView" Grid.Row="1" Grid.Column="0" Content="Overview" Click="btnView_Click"/>
        <Button Name="btnLogin" Grid.Row="3" Grid.Column="0" Content="Login" Click="btnLogin_Click"/>
        <Button Name="btnRegister" Grid.Row="4" Grid.Column="0" Content="Register" Click="btnRegister_Click"/>
        <TextBlock Name="tbLoggedIn" Grid.Row="5" HorizontalAlignment="Center"/>
    </Grid>
</Window>
