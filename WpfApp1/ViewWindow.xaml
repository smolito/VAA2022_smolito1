<Window x:Class="WpfApp1.ViewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="ViewWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="20px"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Button Name="btnMain" Grid.Row="0" Content="Main Page" Click="btnMain_Click" />
        <TextBlock Name="tbSearch" Grid.Row="2" HorizontalAlignment="Center">Search username</TextBlock>
        <TextBox Name="tbxUsername" Grid.Row="3" Grid.ColumnSpan="2" />
        <Button Name="btnSearch" Grid.Row="4" Content="Search" Click="btnSearch_Click" />
    </Grid>
</Window>
